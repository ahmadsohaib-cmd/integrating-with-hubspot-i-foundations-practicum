doctype html
html
  head
    title= title
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/style.css")
  body
    h1 Contacts
    if !data || data.length === 0
      p No contacts found.
    .cards
      each contact in data
        - const p = contact.properties || {}
        .card
          h2.card__name #{p.firstname || 'No First Name'} #{p.lastname || ''}
          p.card__email Email: #{p.email || 'N/A'}
          p.card__phone Phone: #{p.phone || 'N/A'}
          p.card__id ID: #{contact.id}
